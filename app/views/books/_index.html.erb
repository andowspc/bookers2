<table class="table table-striped">
      <thead>
        <tr>
          <th>&nbsp;&nbsp;&nbsp;</th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Like</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
      <% books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "noimage.jpg" %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td class="favorite">
            <%= render "favorites/favorite", book: book %>
          </td>
          <td class="favorite">Comments: <%= book.book_comments.count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>