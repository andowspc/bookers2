<h2>Use info</h2>

    <table class="table table-striped">

      <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.jpg" %></th>
      </tr>

      <tr><th>name</th><td><%= user.name %></td></tr>

      <tr><th>introduction</th><td><%= user.introduction %></td></tr>
      <tr>
        <th>follows</th>
        <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
      </tr>

    </table>

    <%= link_to '', edit_user_path(user.id), class: "btn btn-outline-secondary btn-block  fas fa-user-cog" %>

